{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./npm/lib/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "lib": [
      "es2015",
      "es6",
      "dom",
      "es2017"
    ],
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ]
}